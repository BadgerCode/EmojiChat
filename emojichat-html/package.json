{
  "name": "emojichat-html",
  "version": "1.0.0",
  "description": "HTML component of https://github.com/BadgerCode/emojichat",
  "scripts": {
    "test": "jasmine --config=jasmine.json",
    "start": "webpack-dev-server --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js && npm run postbuildclean",
    "postbuildclean": "rm dist/main.js"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BadgerCode/emojichat-html.git"
  },
  "author": "badger@badgercode.co.uk",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BadgerCode/emojichat-html/issues"
  },
  "homepage": "https://github.com/BadgerCode/emojichat-html#readme",
  "babel": {
    "plugins": [
      "transform-object-rest-spread",
      "transform-flow-strip-types",
      [
        "transform-runtime",
        {
          "polyfill": false
        }
      ]
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "html-webpack-inline-source-plugin": "0.0.10",
    "html-webpack-plugin": "^3.2.0",
    "jasmine": "^3.3.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0"
  }
}
